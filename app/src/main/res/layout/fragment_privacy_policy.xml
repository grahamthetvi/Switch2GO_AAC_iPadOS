<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/SettingsTheme">

    <include layout="@layout/guidelines_settings" />

    <com.switch2go.aac.customviews.Switch2GOImageButton
        android:id="@+id/privacy_policy_back_button"
        style="@style/CloseButton"
        android:layout_width="@dimen/settings_close_button_width"
        android:layout_height="@dimen/settings_close_button_height"
        android:layout_marginTop="@dimen/settings_close_button_top_margin"
        android:scaleType="center"
        android:src="@drawable/category_back_button_icon"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/privacy_policy_title"
        style="@style/ScalableSettingsTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="@dimen/settings_title_padding_start"
        android:paddingEnd="@dimen/settings_title_padding_end"
        android:text="@string/privacy_policy"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@+id/privacy_policy_back_button"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toEndOf="@id/privacy_policy_back_button"
        app:layout_constraintTop_toTopOf="@+id/privacy_policy_back_button"
        app:layout_constraintVertical_chainStyle="packed" />

    <ScrollView
        android:id="@+id/privacy_policy_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/settings_options_margin_top"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/privacy_policy_back_button">

        <TextView
            android:id="@+id/privacy_policy_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/settings_title_padding_start"
            android:textColor="@color/textColor"
            android:textSize="@dimen/timing_subtitle_text_size"
            android:text="@string/privacy_policy_full_text" />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
