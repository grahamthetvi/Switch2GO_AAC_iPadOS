<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:theme="@style/SettingsTheme"
        android:paddingBottom="24dp">

        <include layout="@layout/guidelines_settings" />

        <com.willowtree.vocable.customviews.VocableImageButton
            android:id="@+id/back_button"
            style="@style/CloseButton"
            android:layout_width="@dimen/settings_close_button_width"
            android:layout_height="@dimen/settings_close_button_height"
            android:layout_marginTop="@dimen/settings_close_button_top_margin"
            android:contentDescription="@string/navigate_back"
            android:scaleType="center"
            android:src="@drawable/category_back_button_icon"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/settings_title"
            style="@style/ScalableSettingsTitle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:paddingStart="@dimen/settings_title_padding_start"
            android:paddingEnd="@dimen/settings_title_padding_end"
            android:text="@string/settings_categories_display_title"
            app:layout_constraintBottom_toBottomOf="@+id/back_button"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toEndOf="@+id/back_button"
            app:layout_constraintTop_toTopOf="@+id/back_button" />

        <LinearLayout
            android:id="@+id/options_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/settings_options_margin_top"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/back_button">

            <TextView
                android:id="@+id/combined_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/settings_categories_display_summary"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp" />

            <TextView
                android:id="@+id/categories_section_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:accessibilityHeading="true"
                android:text="@string/settings_categories_section_title"
                android:textColor="@color/textColor"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/categories_section_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/settings_categories_section_description"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp" />

            <com.willowtree.vocable.customviews.NoSayTextButton
                android:id="@+id/categories_phrases_button"
                style="@style/SettingsOptionButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_open_categories_phrases" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:background="@color/textColorDisabled" />

            <TextView
                android:id="@+id/display_section_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:accessibilityHeading="true"
                android:text="@string/settings_display_section_title"
                android:textColor="@color/textColor"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/display_section_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/settings_display_section_description"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp" />

            <com.willowtree.vocable.customviews.NoSayTextButton
                android:id="@+id/display_settings_button"
                style="@style/SettingsOptionButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_open_display_settings" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
