<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/position_picker_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    android:clickable="true"
    android:focusable="true"
    android:visibility="gone">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        app:cardBackgroundColor="@color/cardBackgroundColor"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="400dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/position_picker_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="@string/move_to_position"
                android:textColor="@color/textColor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/position_picker_instruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:textColor="@color/textColor"
                android:textSize="14sp" />

            <!-- Number input buttons grid -->
            <GridLayout
                android:id="@+id/number_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:columnCount="5"
                android:rowCount="2">

                <com.switch2go.aac.customviews.ActionButton
                    android:id="@+id/position_1"
                    style="@style/SettingsButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:text="1" />

                <com.switch2go.aac.customviews.ActionButton
                    android:id="@+id/position_2"
                    style="@style/SettingsButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:text="2" />

                <com.switch2go.aac.customviews.ActionButton
                    android:id="@+id/position_3"
                    style="@style/SettingsButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:text="3" />

                <com.switch2go.aac.customviews.ActionButton
                    android:id="@+id/position_4"
                    style="@style/SettingsButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:text="4" />

                <com.switch2go.aac.customviews.ActionButton
                    android:id="@+id/position_5"
                    style="@style/SettingsButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:text="5" />

                <com.switch2go.aac.customviews.ActionButton
                    android:id="@+id/position_6"
                    style="@style/SettingsButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:text="6" />

                <com.switch2go.aac.customviews.ActionButton
                    android:id="@+id/position_7"
                    style="@style/SettingsButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:text="7" />

                <com.switch2go.aac.customviews.ActionButton
                    android:id="@+id/position_8"
                    style="@style/SettingsButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:text="8" />

                <com.switch2go.aac.customviews.ActionButton
                    android:id="@+id/position_9"
                    style="@style/SettingsButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:text="9" />

                <com.switch2go.aac.customviews.ActionButton
                    android:id="@+id/position_10_plus"
                    style="@style/SettingsButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:text="10+" />

            </GridLayout>

            <!-- Current selection display -->
            <TextView
                android:id="@+id/selected_position_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Action buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.switch2go.aac.customviews.ActionButton
                    android:id="@+id/position_picker_cancel"
                    style="@style/SettingsButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:text="@string/cancel" />

                <com.switch2go.aac.customviews.ActionButton
                    android:id="@+id/position_picker_confirm"
                    style="@style/SettingsButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:text="@string/move" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

