platform :ios, '15.0'

target 'iosApp' do
  use_frameworks!

  # MediaPipe for face/iris detection (optional - can use Vision framework instead)
  # pod 'MediaPipeTasksVision', '~> 0.10.0'

  # Note: The VocableShared framework is built by Gradle and linked directly,
  # not through CocoaPods. See project.yml for framework search paths.

end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
    end
  end
end
